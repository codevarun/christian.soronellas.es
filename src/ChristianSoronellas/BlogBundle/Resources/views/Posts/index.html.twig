{% extends 'ChristianSoronellasBlogBundle::layout.html.twig' %}

{% block headTitle %}
<h1><a class="logo" href="{{ url('root') }}">Christian Soronellas Web Architect</a></h1>
{% endblock %}

{% block content_header '' %}

{% block content %}
    {% if posts|length > 0 %}
    <ul>
        {% for post in posts %}
        {% include 'ChristianSoronellasBlogBundle:Posts:_post.html.twig' with { 'post': post, 'showComments': false } %}
        {% endfor %}
    </ul>
    {% else %}
    <p>There are no posts!</p>
    {% endif %}
{% endblock %}