{% extends 'ChristianSoronellasBackofficeBundle::admin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        '@ChristianSoronellasBackofficeBundle/Resources/public/css/*.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block pagetitle %}Entradas{% endblock %}
{% block pagesubtitle %}Crear nueva entrada{% endblock %}

{% block content %}
<form method="post" action="{{ path('admin_post_create') }}" {{ form_enctype(form) }}>
    {{ form_widget(form.title, { 'attr': { 'class': 'input-xxlarge fontsize2em full-size', 'placeholder': 'Type in the post title' } }) }}
    {{ form_errors(form.title) }}

    {{ form_widget(form.body) }}
    {{ form_errors(form.body) }}

    <fieldset>
        <legend>Post settings</legend>
        {{ form_row(form.commentsEnabled, { 'label': 'Enable comments?', 'attr': { 'checked': true } }) }}
    </fieldset>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">
            <i class="icon-white icon-ok"></i>
            New post!
        </button>
    </div>
{{ form_rest(form) }}
</form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@ChristianSoronellasBackofficeBundle/Resources/public/js/*.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}